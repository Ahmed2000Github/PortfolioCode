


<MudGrid Justify="Justify.Center">
    <MudItem xs="12">
        <MudDivider />
    </MudItem>
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudItem xs="12" Class="d-flex align-center justify-center flex-column">
            <MudLink Href="">
                <Logo Height="60" IsDarkMode="@IsDarkMode" />
            </MudLink>
            <MudText Typo="Typo.body2">Copyright © 2024 Ahmed</MudText>
        </MudItem>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudItem md="4" Class="d-flex align-center justify-center">
            <Logo Height="50" Width="100" IsDarkMode="@IsDarkMode" Style="margin-right:0px !important;margin-bottom:35px !important" />
            <MudText Typo="Typo.body2">Copyright © 2024 Ahmed</MudText>
        </MudItem>
    </MudHidden>

    <MudItem xs="12" md="4" Class="d-flex align-center justify-center gap-4">
        <SocialMedia />
    </MudItem>
    <MudItem xs="12" md="4" Class="d-flex align-center justify-center gap-4">
        <MudLink Href="https://raw.githubusercontent.com/Ahmed2000Github/Data/dedb8fa91b040020cde9f949cded3c738bd19e6e/documents/cv.pdf" Target="_blank" Class="custom-link">
            <MudText Typo="Typo.h6">curriculum vitae</MudText>
        </MudLink>
        <MudText Typo="Typo.h5">|</MudText>
        <MudLink Href="contact" Class="custom-link">
            <MudText Typo="Typo.h6">contact</MudText>
        </MudLink>
    </MudItem>
</MudGrid>


@code {
    [Parameter]
    public bool IsDarkMode { get; set; }
}
