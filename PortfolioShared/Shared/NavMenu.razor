



<style>
    h6 {
        text-align: center;
    }

    .mud-list-item-text .mud-typography{
        text-align:center;
        font-size: var(--mud-typography-h6-size);
        font-weight: var(--mud-typography-h6-weight);
        line-height: var(--mud-typography-h6-lineheight);
        letter-spacing: var(--mud-typography-h6-letterspacing);
    }
    </style>


<MudNavMenu Color="Color.Default">
    <MudGrid Spacing="2" Justify="Justify.Center">
        <MudItem xs="@getValue">
            <MudNavLink Href="" Match="NavLinkMatch.All">
                <MudText Typo="Typo.h6">home</MudText>
            </MudNavLink>
        </MudItem>
        <MudItem xs="@getValue">
            <MudNavLink Href="about" Match="NavLinkMatch.Prefix">
                <MudText Typo="Typo.h6">about</MudText>
            </MudNavLink>
        </MudItem>
        <MudItem xs="@getValue">
            <MudNavLink Href="projects" Match="NavLinkMatch.Prefix">
                <MudText Typo="Typo.h6">projects</MudText>
            </MudNavLink>
        </MudItem>
        @if (!IsHorizontal)
        {
            <MudItem xs="@getValue">
                <MudList Clickable="true" Color="Color.Primary">

                    <MudListItem Text="pages" Class="mud-typography-h6" InitiallyExpanded="false" Expanded="IsClosed">
                        <NestedList>
                            <MudListItem >
                                <MudNavLink Href="program" Match="NavLinkMatch.Prefix">
                                    <MudText Typo="Typo.h6" Align="Align.Start">program</MudText>
                                </MudNavLink>
                            </MudListItem>
                            <MudListItem >
                                <MudNavLink Href="3d" Match="NavLinkMatch.Prefix">
                                    <MudText Typo="Typo.h6" Align="Align.Start">3d</MudText>
                                </MudNavLink>
                            </MudListItem>
                        </NestedList>
                    </MudListItem>
                </MudList>
            </MudItem>
            <MudItem xs="@getValue">
                <MudNavLink Href="contact" Match="NavLinkMatch.Prefix">
                    <MudText Typo="Typo.h6">contact</MudText>
                </MudNavLink>
            </MudItem>
        }
    </MudGrid>
</MudNavMenu>

@code {
    [Parameter]
    public bool IsHorizontal { get; set; } 
    [Parameter]
    public bool IsClosed { get; set; } = false;

    // Get correct GridItm's xs value
    private int getValue => IsHorizontal ? 0 : 12;
}