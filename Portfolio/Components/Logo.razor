@if (IsDarkMode)
{
    <MudImage Src="images/logo/dark_full_logo.png" Width="@Width" Height="@Height" Alt="Logo" Elevation="0" Class="@_imageClasses" Style="@Style" />
}
else
{
    <MudImage Src="images/logo/light_full_logo.png" Width="@Width" Height="@Height" Alt="Logo" Elevation="0" Class="@_imageClasses" Style="@Style" />
}

@code {
    [Parameter]
    public int Height { get; set; }
    [Parameter]
    public int Width { get; set; } = 200;
    [Parameter]
    public string Style { get; set; } = "";
    [Parameter]
    public bool IsDarkMode { get; set; }
    string _imageClasses = "rounded-lg ma-4 custom-mud-image";
}
